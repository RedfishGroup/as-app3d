{
  "name": "asx",
  "version": "0.1.0",
  "description": "eXperimental modules for AgentScript, 2nd Edition",
  "main": "src/app.js",
  "author": "Owen Densmore",
  "license": "GPL-3.0",
  "repository": {
    "type": "git",
    "url": "git://github.com/backspaces/asx.git"
  },
  "scripts": {
    "all": "npm run build && npm run docs",

    "babel": "babel",
    "shx": "shx",

    "installglobals": "npm install babel-cli babel-preset-es2015 babel-plugin-transform-es2015-modules-systemjs -g",

    "build5": "babel --presets es2015 --plugins transform-es2015-modules-systemjs src apps -d lib5 --source-maps",
    "build6": "babel --plugins transform-es2015-modules-systemjs src apps -d lib6",
    "build": "npm run build5 && npm run build6",

    "watch5": "npm run build5 -- --watch",
    "watch6": "npm run build6 -- --watch",
    "watch": "npm run watch5 & npm run watch6",

    "docs": "docco -o ./docs/ ./src/*.js",

    "git-diff": "git diff README.md package.json src apps",
    "git-prep": "npm run all && git add . && git status",
    "git-commit": "git commit -v && git push origin master"
  },
  "globalDependencies": {
    "README": "Standard global installs: run installglobals",
    "babel-cli": "^6.6.0",
    "babel-plugin-transform-es2015-modules-systemjs": "^6.6.0",
    "babel-preset-es2015": "^6.6.0"
  },
  "dependencies": {
    "systemjs": "^0.19.23"
  },
  "devDependencies": {
    "docco": "^0.7.0",
    "lzma": "^2.3.0",
    "pako": "^1.0.0",
    "shx": "^0.1.1"
  }
}
